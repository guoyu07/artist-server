<%= form_tag("/users/do_login", method: "post", class: "form-horizontal", role: "form") do %>
  <div class="form-group">
    <label for="inputPhone" class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
      美丫丨多一点美丽
    </div>
  </div>
  <div class="form-group">
    <label for="inputMobile" class="col-sm-2 control-label">用户名：</label>
    <div class="col-sm-10">
      <input type="text"  name="username" class="form-control meiya-text" id="inputMobile" placeholder="手机号" required="required" maxlength="11">
      <i class="meiya-form-control-feedback glyphicon" style="top: 0px; z-index: 100; display: block;"></i>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword" class="col-sm-2 control-label">密码：</label>
    <div class="col-sm-10">
      <input type="password" name="password"  class="form-control meiya-text" id="inputPassword" placeholder="密码" required="required">
      <i class="meiya-form-control-feedback glyphicon" style="top: 0px; z-index: 100; display: block;"></i>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <a class="" href="/users/forget_password" role="button">忘记密码</a>&nbsp;&nbsp;
      没有账号？<a class="" href="/users/register" role="button">立即注册</a>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" id="submitBtn" class="btn btn-danger meiya-text">化妆师登录</button>
    </div>
  </div>
<% end %>



<script type="text/javascript">
    //<![CDATA[
    function changeFormStatus(element, status){
      if(status){
        $("#submitBtn").removeAttr("disabled");
        $(element).parent().removeClass('has-error').addClass('has-success');
        $(element).next().removeClass('glyphicon-remove').addClass('glyphicon-ok');
      }else{
        $("#submitBtn").attr("disabled", "disabled");
        $(element).parent().removeClass('has-success').addClass('has-error');
        $(element).next().removeClass('glyphicon-ok').addClass('glyphicon-remove');
      }
    }

    $(function(){
      // Validate mobile
      $('#inputMobile').keyup(function(){
        var mobile_format =  /^1[3,4,5,8][0-9]{9}$/;
        var mobile = $(this).val();
        changeFormStatus(this, (mobile.length == 11 && mobile_format.test(mobile)));
      });

      // Validate password
      $('#inputPassword').keyup(function(){
        var password = $(this).val();
        changeFormStatus(this, (password.length > 0));
      });
    });
    //]]>
</script>