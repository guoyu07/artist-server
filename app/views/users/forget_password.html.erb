<%= form_tag("/users/do_forget_password", method: "post", class: "form-horizontal", role: "form") do %>
  <div class="form-group">
    <label for="" class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
      找回密码
    </div>
  </div>
  <div class="form-group" id="mobileDiv">
    <label for="inputMobile" class="col-sm-2 control-label">手机号：</label>
    <div class="col-sm-10">
      <input type="text"  name="mobile" class="form-control meiya-text" id="inputMobile" placeholder="手机号" required="required" maxlength="11">
      <i class="meiya-form-control-feedback glyphicon" style="top: 0px; z-index: 100; display: block;"></i>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword" class="col-sm-2 control-label">新密码：</label>
    <div class="col-sm-10">
      <input type="password" class="form-control meiya-text" id="inputPassword" placeholder="新密码" required="required" maxlength="16" name="password">
      <i class="meiya-form-control-feedback glyphicon" style="top: 0px; z-index: 100; display: block;"></i>
    </div>
  </div>
  <div class="form-group">
    <label for="inputConfirmPassword" class="col-sm-2 control-label">重复密码：</label>
    <div class="col-sm-10">
      <input type="password" class="form-control meiya-text" id="inputConfirmPassword" placeholder="重复密码" required="required" maxlength="16" name="password">
      <i class="meiya-form-control-feedback glyphicon" style="top: 0px; z-index: 100; display: block;"></i>
    </div>
  </div>
  <div class="form-group">
    <label for="inputCaptcha" class="col-sm-2 control-label">验证码：</label>
    <div class="col-sm-10">
      <input type="password" class="meiya-captcha" id="inputCaptcha" placeholder="验证码" required="required" maxlength="4" name="captcha">&nbsp;&nbsp;&nbsp;
      <button type="button" id="sendCaptcha" class="btn btn-danger">立即获取</button>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" id="submitBtn" class="btn btn-danger meiya-text">确认修改</button>
    </div>
  </div>
<% end %>

<script type="text/javascript">
    //<![CDATA[
    $(function(){
      // Validate mobile
      mobileValidation('inputMobile');

      // Validate password
      passwordValidation('inputPassword');

      // Validate confirm password
      confirmPasswordValidation('inputPassword', 'inputConfirmPassword');

      // Click to send captcha
      sendMobileCaptcha();

    });
    //]]>
</script>