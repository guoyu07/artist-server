<%= form_tag("/users/do_register", method: "post", class: "form-horizontal", role: "form") do %>
  <div class="form-group">
    <label for="inputPhone" class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
      美丫丨多一点美丽
    </div>
  </div>
  <div class="form-group">
    <label for="inputMobile" class="col-sm-2 control-label">用户名：</label>
    <div class="col-sm-10">
      <input type="text" class="form-control meiya-text" id="inputMobile" placeholder="手机号" required="required"  maxlength="11">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword" class="col-sm-2 control-label">密码：</label>
    <div class="col-sm-10">
      <input type="password" class="form-control meiya-text" id="inputPassword" placeholder="密码" required="required">
    </div>
  </div>
  <div class="form-group">
    <label for="inputCaptcha" class="col-sm-2 control-label">验证码：</label>
    <div class="col-sm-10">
      <input type="password" class="meiya-captcha" id="inputCaptcha" placeholder="验证码" required="required" maxlength="4">&nbsp;&nbsp;&nbsp;&nbsp;
      <button type="button" class="btn btn-danger">立即获取</button>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="checkbox" name="user_terms" checked='true'> 用户须知 &nbsp;&nbsp;
      已有账号？<a class="" href="/users/login" role="button">立即登录</a>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-danger meiya-text">化妆师注册</button>
    </div>
  </div>
<% end %>